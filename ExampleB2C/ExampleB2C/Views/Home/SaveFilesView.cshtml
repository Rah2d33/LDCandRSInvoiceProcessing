@{
    ViewData["Title"] = "Savefiles";
}

<div class="text-center">
    <h1 class="display-4">Uploads</h1>
    <div id="drop-zone" class="drop-zone">
        <span>Drag and drop files here or click to select files</span>
    </div>
    <div id="stagingArea" class="mb-2"></div>

    <span class="text-success">
        @if (TempData["Message"] != null)
        {
            @TempData["Message"]
        }
    </span>

    <button id="upload-button" class="btn btn-primary btn-lg fixed-bottom-right">Upload</button>
</div>

<style>
    .fixed-bottom-right {
        position: fixed;
        bottom: 75px;
        right: 20px;
    }

    .drop-zone {
        width: 100%;
        height: 200px;
        padding: 25px;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        font-size: 16px;
        cursor: pointer;
        color: #ccc;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

        .drop-zone:hover {
            background-color: #f5f5f5;
        }

</style>

<script>
    setTimeout(function () {
        document.querySelector('.text-success').remove();
    }, 5000); // 5000 milliseconds = 5 seconds
</script>

<script scr="~/js/site.js"></script>